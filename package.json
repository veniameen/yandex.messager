{
  "name": "messager",
  "version": "1.0.0",
  "description": "Yandex Praktikum sprint 1",
  "scripts": {
    "clear": "rm -rf dist/* .cache/*",
    "start": "npm run build && node server.js",
    "build": "npm run clear && parcel build src/**/app.sass --no-source-maps --public-url ./ && npm run copy && tsc",
    "copy": "copyfiles -u 2 src/**/*.{svg,png} dist",
    "deploy": "npm run build && pug netlify/pages/*.pug --out dist",
    "eslint": "./node_modules/.bin/eslint src/**/**/*.ts",
    "stylelint": "npx stylelint \"**/*.sass\""
  },
  "customDistStructure": {
    "config": {
      "js": [
        ".js",
        ".js.map"
      ],
      "css": [
        ".css",
        ".css.map"
      ],
      "images": [
        ".jpg",
        ".png",
        ".svg"
      ],
      "fonts": [
        ".ttf",
        ".woff",
        ".woff2"
      ]
    },
    "options": {
      "development": true
    }
  },
  "keywords": [
    "messager",
    "chat",
    "yadnex"
  ],
  "author": "Veniamin Ryadnov",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.4.1",
    "eslint-config-google": "^0.14.0",
    "express": "^4.17.1",
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-custom-dist-structure": "^1.1.18",
    "postcss-sass": "^0.5.0",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.43.4",
    "stylelint-config-standard": "^24.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "handlebars": "^4.7.7"
  }
}
