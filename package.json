{
  "name": "messager",
  "version": "1.0.0",
  "description": "Yandex Praktikum sprint 1",
  "scripts": {
    "clear": "rm -rf dist/* .cache/*",
    "start": "npm run build && node server.js",
    "build": "npm run clear && parcel build src/pages/*.pug --no-source-maps --public-url ./",
    "dev": "npm run clear && parcel serve src/pages/*.pug --no-source-maps --port 3000 --open"
  },
  "customDistStructure": {
    "config": {
      "js": [
        ".js",
        ".js.map"
      ],
      "css": [
        ".css",
        ".css.map"
      ],
      "images": [
        ".jpg",
        ".png",
        ".svg"
      ],
      "fonts": [
        ".ttf"
      ]
    },
    "options": {
      "development": true
    }
  },
  "keywords": [
    "messager",
    "chat",
    "yadnex"
  ],
  "author": "Veniamin Ryadnov",
  "license": "ISC",
  "devDependencies": {
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-custom-dist-structure": "^1.1.18",
    "pug": "^3.0.2",
    "sass": "^1.43.4"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
